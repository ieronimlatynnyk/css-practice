<header class='header row g-0'>
  <div class='col-3'>
    {{>logo}}
  </div>

  <nav class='header_nav col-9'>
    <div class='header_nav_right'>
      {{>nav list=header}}
    </div>
  </nav>
</header>

{{#with main}}
  <div class="hero">
    <img src="{{image}}" alt="Hero image" class="hero_image"> 
    <div class="hero_content">
      <h1 class="hero_title">
        {{heading}}
      </h1>
      <p class="hero_text">
        {{descriotion}}
      </p>
      <a href="{{href}}" class="button hero_button">{{button}}</a>
    </div>
  </div>
{{/with}}

<main class='blog'>
  {{#each featured}}
   {{>cardBlog data=this}}
  {{/each}}
</main>

<div class="form">
{{#each actions}}
  <div class="form_content">
    <h3 class="form_title">{{heading}}</h3>
    <div class="form_action">
      <a href="{{url}}" class="button form_button">{{text}}</a>
    </div>
  </div>
{{/each}}
</div>

<footer class='row footer'>
  <div class='col-3'>
    {{>logo}}
    <span class='footer_copyright'>Copyright 2023-2024</span>
  </div>

  {{#each footer}}
    <div class='col-3'>
      <span class='footer_title'>{{title}}</span>
      {{>nav list=links isVertical=true}}
    </div>
  {{/each}}
</footer>